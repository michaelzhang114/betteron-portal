<h1>Posts</h1>

<table class="table table-striped">
  <thead>
    <th>#</th>
    <th>Date</th>
    <th>User</th>
    <th>Title</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.date %></td>
        <td><%= post.user.first_name %></td>
        <td><%= truncate(post.rationale) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
