<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "BetterOn notification", sticky: false, time: 1500, image: :warning) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "BetterOn notification", sticky: false, time: 1500, image: :notice) %>
<% else %>
  <%= js add_gritter(flash[:error], title: "BetterOn notification", sticky: false, time: 1500, image: :error) %>
<% end %>
